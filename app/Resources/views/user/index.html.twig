{% extends 'base.html.twig' %}
{% block title %}Liste des utilisateurs{% endblock %}
{% block pageHeader %}<h1>Liste des utilisateurs</h1>{% endblock %}
{% block body %}
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Liste des utilisateurs</h3>
                <div class="box-tools">
                    <a class="btn btn-success btn-sm" href="{{ path('user_new') }}">Ajouter un utilisateur</a>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive ">
                <table class="table table-hover">
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Pseudo</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Derniére connexion</th>
                        <th>Action</th>
                    </tr>
                    {% for user in users %}
                    <tr>
                          <td>{{ user.lastName }}</td>
                          <td>{{ user.firstName }}</td>
                          <td>{{ user.username }}</td>
                          <td>{{ user.email }}</td>
                          <td>{{ user.plainRole }}</td>
                          <td>{% if user.lastLogin %}{{ user.lastLogin | date("d-m-Y h:m") }}{% endif %}</td>
                          <td>
                              <div class="btn-group-vertical">
                                  <a href="{{ path('user_edit',{ 'id':user.id }) }}" class="btn btn-warning">Modifier</a>
                                  <a href="{{ path('user_delete',{ 'id':user.id }) }}" class="btn btn-danger">Supprimer</a>
                              </div>
                          </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
{% endblock %}
